<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50FFFFFF"
    tools:context="com.google.android.gms.samples.vision.ocrreader.DetailTextActivity">

    <RelativeLayout
        android:id="@+id/rlText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEXT:"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#9bd823"
            android:foregroundGravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="8dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Tap on text to edit"
            android:layout_below="@+id/tv"/>
        <EditText
            android:id="@+id/tvText"
            android:layout_below="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="#000000"
            android:foregroundGravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>
        <View
            android:id="@+id/line"
            android:layout_below="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="#9bd823"/>

        <LinearLayout
            android:id="@+id/llBut1"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="#00FFFFFF"
            android:layout_margin="5dp">
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_copy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#7ab800"
                fancy:mfb_focusColor="#9bd823"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Copy"
                fancy:mfb_textColor="#FFFFFF" />
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_play"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#7ab800"
                fancy:mfb_focusColor="#9bd823"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Play"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_textColor="#FFFFFF" />
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_google"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#7ab800"
                fancy:mfb_focusColor="#9bd823"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Google"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_textColor="#FFFFFF" />
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#7ab800"
                fancy:mfb_focusColor="#9bd823"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Share"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_textColor="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBut2"
            android:layout_below="@+id/llBut1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="#00FFFFFF"
            android:layout_margin="5dp">
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#336ac4"
                fancy:mfb_focusColor="#336ac4"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_fontIconResource="&#xf0c5;"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Call"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_textColor="#FFFFFF"
                android:visibility="gone"/>
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_whatsapp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#336ac4"
                fancy:mfb_focusColor="#336ac4"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_fontIconResource="&#xf0c5;"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="WhatsApp"
                android:fontFamily="sans-serif-condensed"
                fancy:mfb_textColor="#FFFFFF"
                android:visibility="gone"/>
            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="#336ac4"
                fancy:mfb_focusColor="#336ac4"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_fontIconResource="&#xf0c5;"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Email"
                fancy:mfb_textColor="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rlText"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1243068719441957/7927748298"
        > </com.google.android.gms.ads.AdView>
</RelativeLayout>
